while True:
    try:
        option = int(input("Digite 1 para masculino e 2 para feminino: "))
        if option not in (1, 2):
            print(
                "Ops! parece que voce digitou errado, por favor digite 1 para masculino e 2 para feminino."
            )
            continue
        break
    except ValueError:
        print(
            "Parece que voce digitou letras ao inves de numeros, por favor digite 1 para masculino e 2 para feminino."
        )
    continue

if option == 1:
    print("Masculino")
elif option == 2:
    print("Feminino")
